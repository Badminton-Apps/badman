{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./scripts/render.js --app=api"
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "dependsOn": ["^build"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "assets": [
          "apps/api/src/assets",
          {
            "glob": "**/*",
            "input": "libs/backend/translate/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "libs/backend/competition/assembly/src/compile",
            "output": "compile/libs/assembly"
          },
          {
            "glob": "**/*",
            "input": "libs/backend/mailing/src/compile",
            "output": "compile/libs/mailing"
          }
        ],
        "outputPath": "dist/apps/api",
        "webpackConfig": "apps/api/webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true
        },
        "production": {
          "extractLicenses": true,
          "optimization": true,
          "sourceMap": false
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js",
        "{workspaceRoot}/jest.config.ts",
        {
          "externalDependencies": ["jest"]
        }
      ],
      "outputs": ["{workspaceRoot}/coverage/apps/api", "{workspaceRoot}\\coverage\\apps\\api"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "apps/api/eslint.config.js"
      }
    }
  }
}
