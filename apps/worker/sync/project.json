{
  "name": "worker-sync",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/worker/sync/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "worker-sync:build",
        "port": 9230,
        "inspect": "inspect",
        "host": "0.0.0.0"
      },
      "configurations": {
        "development": {
          "buildTarget": "worker-sync:build:development"
        },
        "production": {
          "buildTarget": "worker-sync:build:production"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./scripts/render.js --app=worker_sync"
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "defaultConfiguration": "development",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "main": "apps/worker/sync/src/main.ts",
        "tsConfig": "apps/worker/sync/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "libs/backend/mailing/src/compile",
            "output": "compile/libs/mailing"
          },
          {
            "glob": "**/*",
            "input": "libs/backend/translate/assets",
            "output": "assets"
          }
        ],
        "outputPath": "dist/apps/worker/sync",
        "webpackConfig": "apps/worker/sync/webpack.config.js"
      },
      "configurations": {
        "development": {
          "cwd": "apps/worker/sync",
          "args": ["--node-env=development"]
        },
        "production": {
          "cwd": "apps/worker/sync",
          "args": ["--node-env=production"]
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js",
        "{workspaceRoot}/jest.config.ts",
        {
          "externalDependencies": ["jest"]
        }
      ],
      "outputs": [
        "{workspaceRoot}/coverage/apps/worker/sync",
        "{workspaceRoot}\\coverage\\apps\\worker\\sync"
      ],
      "options": {
        "jestConfig": "apps/worker/sync/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "apps/worker/sync/eslint.config.js"
      }
    }
  }
}
