{
  "name": "scripts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/scripts/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "scripts:build",
        "port": 9240,
        "inspect": "inspect",
        "host": "0.0.0.0"
      },
      "configurations": {
        "development": {
          "buildTarget": "scripts:build:development"
        },
        "production": {
          "buildTarget": "scripts:build:production"
        }
      }
    },
    "build": {
      "options": {
        "tsConfig": "apps/scripts/tsconfig.app.json"
      }
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js",
        "{workspaceRoot}/jest.config.ts",
        {
          "externalDependencies": ["jest"]
        }
      ],
      "outputs": [
        "{workspaceRoot}/coverage/apps/scripts",
        "{workspaceRoot}\\coverage\\apps\\scripts"
      ],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "apps/scripts/eslint.config.js"
      }
    }
  }
}
