{
  "projectType": "application",
  "sourceRoot": "apps/badman/src",
  "prefix": "badman",
  "targets": {
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "metadata": {
          "images": ["badman/client", "ghcr.io/badminton-apps/badman/client"],
          "tags": [
            "type=schedule",
            "type=ref,event=tag",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha,prefix=sha-"
          ]
        }
      }
    },
    "update-version": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node ../../scripts/update-helm.js {args.newVersion}",
        "cwd": "apps/badman",
        "parallel": false
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "helm upgrade --install --namespace badman client ./charts"
        ],
        "cwd": "apps/badman",
        "parallel": false
      }
    },
    "build": {
      "executor": "@nrwl/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/badman",
        "index": "apps/badman/src/index.html",
        "main": "apps/badman/src/main.ts",
        "polyfills": "apps/badman/src/polyfills.ts",
        "tsConfig": "apps/badman/tsconfig.app.json",
        "buildLibsFromSource": false,
        "customWebpackConfig": {
          "path": "apps/badman/webpack.config.js"
        },
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/badman/src/favicon.ico",
          "apps/badman/src/favicon.ico",
          "apps/badman/src/assets",
          "apps/badman/src/manifest.webmanifest"
        ],
        "styles": [
          "apps/badman/src/styles.scss",
          "node_modules/prismjs/themes/prism-okaidia.css",
          "node_modules/cookieconsent/build/cookieconsent.min.css"
        ],
        "scripts": [
          "node_modules/prismjs/prism.js",
          "node_modules/prismjs/components/prism-markdown.min.js",
          "node_modules/prismjs/components/prism-typescript.min.js",
          "node_modules/cookieconsent/build/cookieconsent.min.js",
          "node_modules/echarts/dist/echarts.js"
        ],
        "allowedCommonJsDependencies": [
          "raf",
          "html2pdf.js",
          "opentracing",
          "core-js",
          "echarts",
          "zen-observable",
          "moment-timezone",
          "zrender"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/badman/src/environments/environment.ts",
              "with": "apps/badman/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nrwl/angular:webpack-server",
      "configurations": {
        "production": {
          "browserTarget": "badman:build:production"
        },
        "development": {
          "browserTarget": "badman:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "proxyConfig": "apps/badman/proxy.conf.json",
        "host": "0.0.0.0",
        "disableHostCheck": true,
        "watch": true
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "badman:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/badman/**/*.ts", "apps/badman/**/*.html"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/badman"],
      "options": {
        "jestConfig": "apps/badman/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
