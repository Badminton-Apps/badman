{
  "sourceRoot": "apps/worker/sync/src",
  "projectType": "application",
  "targets": {
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "metadata": {
          "images": ["ghcr.io/badminton-apps/badman/worker/sync"],
          "tags": [
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=ref,event=tag"
          ]
        }
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build worker-sync",
          "docker build -f ./apps/worker/sync/Dockerfile . -t worker-sync"
        ],
        "parallel": false
      }
    },
    "deploy-dev": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "docker build -f ./apps/worker/sync/Dockerfile.dev . -t worker-sync-dev"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/worker/sync",
        "main": "apps/worker/sync/src/main.ts",
        "tsConfig": "apps/worker/sync/tsconfig.app.json",
        "assets": ["apps/worker/sync/src/assets"],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/worker/sync/src/environments/environment.ts",
              "with": "apps/worker/sync/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "worker-sync:build",
        "port": 9230,
        "inspect": "inspect",
        "host": "0.0.0.0"
      }
    },
    "serve-dev": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "worker-sync:build",
        "inspect": "inspect",
        "port": 9230,
        "host": "0.0.0.0"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/worker/sync/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/worker/sync"],
      "options": {
        "jestConfig": "apps/worker/sync/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
