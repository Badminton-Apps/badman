{
  "name": "badman-frontend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "nohoist": [
    "**/@angular/*",
    "**/@angular/*/**",
    "**/@ngrx/*",
    "**/@ngrx/*/**",
    "**/@angular-builders/*",
    "**/@angular-builders/*/**",
    "**/@angular-devkit/*",
    "**/@angular-devkit/*/**"
  ],
  "scripts": {
    "start": "npx lerna run --parallel start",
    "release": "npx lerna version",
    "lint": "npx lerna run lint --stream",
    "test": "npx lerna run test --stream",
    "build": "npx lerna run build --stream",
    "test:local": "npx lerna run test:local --stream"
  }
}
