{
  "name": "@badvlasim/simulate",
  "description": "Ranking simulation simulate Badminton Vlaanderen",
  "version": "4.27.0",
  "private": true,
  "scripts": {
    "start": "node -r ts-node/register ./src/server.ts",
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist ../_shared/dist",
    "compile": "tsc -b tsconfig.build.json",
    "start:inspect": "node --inspect=6860 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "start:watch:inspect": "nodemon --exec node --inspect=6860 -r ts-node/register ./src/server.ts",
    "test:local": "jest --colors --watchAll",
    "test": "jest --runInBand",
    "lint": "eslint -c ../../.eslintrc ./**/*{.ts,.tsx}",
    "format": "eslint --fix -c ../../.eslintrc ./**/*{.ts,.tsx}"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@badvlasim/shared": "^4.27.0"
  },
  "peerDependencies": {
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "mock-fs": "^5.1.2"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/../../test/env.js"
    ],
    "reporters": [
      "default",
      "jest-github-actions-reporter"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "testLocationInResults": true
  }
}
