{
  "name": "@badvlasim/server",
  "description": "Ranking simulation server Badminton Vlaanderen",
  "version": "4.22.0",
  "private": true,
  "scripts": {
    "start": "node -r ts-node/register ./src/server.ts",
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist ../_shared/dist",
    "compile": "tsc -b tsconfig.build.json",
    "start:inspect": "node --inspect=6859 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "start:watch:inspect": "nodemon --exec node --inspect=6859 -r ts-node/register ./src/server.ts --trace-warnings",
    "test:local": "jest --colors --watchAll",
    "test": "jest  --runInBand",
    "lint": "eslint -c ../../.eslintrc ./**/*{.ts,.tsx}",
    "format": "eslint --fix -c ../../.eslintrc ./**/*{.ts,.tsx}"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@badvlasim/shared": "^4.22.0",
    "apollo-server-express": "^3.5.0",
    "global": "^4.4.0",
    "graphql": "^16.0.1",
    "graphql-cost-analysis": "^1.0.3",
    "graphql-fields-list": "^2.2.4",
    "graphql-import": "^1.0.1",
    "graphql-relay": "^0.9.0",
    "graphql-resolvers": "^0.4.2",
    "graphql-sequelize": "^9.4.3",
    "http-proxy-middleware": "^2.0.1",
    "rxjs": "^7.4.0",
    "sequelize-slugify": "^1.6.0"
  },
  "peerDependencies": {
    "moment": "^2.24.0"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/../../test/env.js"
    ],
    "reporters": [
      "default",
      "jest-github-actions-reporter"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "testLocationInResults": true
  }
}
