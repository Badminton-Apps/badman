<html>
  <head>
    <meta charset="UTF-8" />
    <style>
      body {
      margin: 16px 48px;
      font-size: 12px;
    }

    /* Header info */

    .encounter {
      display: -ms-grid;
      display: grid;
      grid-template-columns: 1fr 250px 35px 250px 1fr;
      margin-top: 15px;
      margin-bottom: 10px;
    }

    .info .captain,
    .info .home,
    .info .away,
    .info .indexes {
      display: inline-block;
      border: 1px solid black;
      padding: 5px;
    }

    .info .title {
      font-size: 14px;
      padding-bottom: 2px;
    }

    .info .value {
      font-weight: bold;
      font-size: 20px;
    }

    .info .captain {
      margin-right: 50px;
    }

    .info .home {
      text-align: right;
    }

    .info .home,
    .info .away {
      position: relative;
    }

    .info .away .status-inactive,
    .info .away .status-active {
      right: 15px;
    }

    .info .home .status-inactive,
    .info .home .status-active {
      left: 15px;
    }

    .info .status-inactive {
      display: inline-block;
      border: 1px solid black;
      border-radius: 50%;
      width: 20px;
      height: 20px;
      position: absolute;
      top: 20px;
    }

    .info .status-active {
      display: inline-block;
      background-color: black;
      border-radius: 50%;
      width: 20px;
      height: 20px;
      position: absolute;
      top: 20px;
    }

    .info .indexes {
      margin-left: 35px;
      font-size: 14px;
    }

    .event {
      text-align: center;
    }

    .event .draw {
      font-size: 18px;
    }

    .event .date {
      font-size: 14px;
    }

    /* Scoores*/
    .wrapper {
      margin-top: 10px;
      display: -ms-grid;
      display: grid;
      -ms-grid-columns: 1fr 35px 5fr 1.2fr 2fr 2fr 2fr 2fr 2fr;
      grid-template-columns: 1fr 35px 5fr 1.2fr 2fr 2fr 2fr 2fr 2fr;
      border-left: 1px solid black;
    }

    .wrapper {
      border-top: 1px solid black;
    }


    .box {
      border-bottom: 1px solid black;
      border-right: 1px solid black;
      padding: 5px;
    }
    .box{
      min-height: 15px;
    }
 

    .players {
      border-right: 1px solid black;
      border-bottom: 1px solid black;
    }

    .header {
      text-align: center;
      font-size: 34px;
      padding: 2px;
      background: grey;
      margin: 0 150px;
      border: 3px solid black;
      font-weight: bold;
    }

    .title {
      -ms-grid-row: 1;
      grid-row: 1;
    }

    .title.type {
      -ms-grid-column: 1;
      -ms-grid-column-span: 2;
      grid-column: 1/3;
    }

    .d0.type {
      -ms-grid-row: 2;
      -ms-grid-row-span: 2;
      grid-row: 2 / 4;
    }

    .d1.type {
      -ms-grid-row: 4;
      -ms-grid-row-span: 2;
      grid-row: 4 / 6;
    }

    .d2.type {
      -ms-grid-row: 6;
      -ms-grid-row-span: 2;
      grid-row: 6 / 8;
    }

    .d3.type {
      -ms-grid-row: 8;
      -ms-grid-row-span: 2;
      grid-row: 8 / 10;
    }

    .s0 {
      border-top: 2px solid black;
    }

    .s0.type {
      -ms-grid-row: 10;
      grid-row: 10;
    }

    .s1.type {
      -ms-grid-row: 11;
      grid-row: 11;
    }

    .s2.type {
      -ms-grid-row: 12;
      grid-row: 12;
    }

    .s3.type {
      -ms-grid-row: 13;
      grid-row: 13;
    }

    .type {
      display: -ms-grid;
      display: grid;
      -ms-grid-column: 1;
      grid-column: 1;
      justify-items: center;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
    }

    .players {
      display: -ms-grid;
      display: grid;
      -ms-grid-column: 2;
      grid-column: 2;
      -ms-grid-row: 2;
      -ms-grid-row-span: 12;
      grid-row: 2 / 14;
      word-break: break-all;
      padding: 0 10px;
      text-transform: uppercase;
      font-size: large;
      justify-items: center;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
      text-align: center;
    }

    .subtitudes .type {
      -ms-grid-row: 2;
      -ms-grid-row-span: 4;
      grid-row: 2 / 90;
      -ms-grid-column: 1;
      -ms-grid-column-span: 2;
      grid-column: 1 / 3;
    }

    .subtitudes .level {
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
    }

    .subtitudes .level div {
      -webkit-box-flex: 1;
      -ms-flex: 1;
      flex: 1;
    }

    .subtitudes .pre {
      -ms-grid-column: 1;
      -ms-grid-column-span: 3;
      grid-column: 1 / 4;
    }

    .subtitudes .post {
      -ms-grid-column: 5;
      -ms-grid-column-span: 5;
      grid-column: 5 / 10;
    }

    .name {
      -ms-grid-column: 3;
      grid-column: 3;
    }

    .level {
      -ms-grid-column: 4;
      grid-column: 4;
      text-align: center;
    }

    .number {
      -ms-grid-column: 5;
      grid-column: 5;
    }

    .sum {
      -ms-grid-column: 6;
      grid-column: 6;
    }

    .highest {
      -ms-grid-column: 7;
      grid-column: 7;
    }

    .team {
      -ms-grid-column: 8;
      grid-column: 8;
    }

    .base {
      -ms-grid-column: 9;
      grid-column: 9;
    }

    /*  bottom */
    .bottom {
      display: -ms-grid;
      display: grid;
      grid-template-columns: 350px 1fr 1fr;
      text-align: right;
      margin-top: 10px;
    }

    .bottom .logo  img{
      width: 100%;
    }
    </style>
  </head>
  <body>
    <div class="info">
      <div class="header">
        <div class="title">
          Ploegopstellingsformulier â€“ Interclubcompetitie
        </div>
      </div>
      <div class="encounter">
        <div class="captain">
          <div class="title">
            Ploegkapitein
          </div>
          <div class="value">
            {{captain}}
          </div>
        </div>
        <div class="home">
          <div class="title">
            Thuisploeg
          </div>
          <div class="value">
            {{homeTeam}}
          </div>
          {{#if isHomeTeam}}
            <div class="status-active"></div>
          {{else}}
            <div class="status-inactive"></div>
          {{/if}}
        </div>
        <div></div>
        <div class="away">
          <div class="title">
            Bezoekers
          </div>
          <div class="value">
            {{awayTeam}}
          </div>
          {{#if isHomeTeam}}
            <div class="status-inactive"></div>
          {{else}}
            <div class="status-active"></div>
          {{/if}}
        </div>
        <div class="indexes">
          <div class="title">
            Ploegindex
          </div>
          <div class="base-index">
            Basisspelers:
            {{baseIndex}}
          </div>
          <div class="team-index">
            Titularissen:
            {{teamIndex}}
          </div>
        </div>
      </div>
      <div class="event">
        <div class="draw">
          {{event}}
        </div>
        <div class="date">
          {{date}}
        </div>
      </div>
    </div>
    <div class="wrapper">
      <div class="box title type"></div>
      <div class="box title name">
        Naam
      </div>
      <div class="box title level">
        Klas.
        <small>
          (huidig)
        </small>
      </div>
      <div class="box title number">
        Lidnr.
      </div>
      <div class="box title sum">
        Som Index
        <br />
        <small>
          (mei vorig seizoen)
        </small>
      </div>
      <div class="box title highest">
        Hoogste klas.
        <br />
        <small>
          (mei vorig seizoen)
        </small>
      </div>
      <div class="box title team">
        Ploeg Index
        <br />
        <small>
          (titularis telt mee)
        </small>
      </div>
      <div class="box title base">
        Basis Speler<br/>
        <small>
          (mei vorig seizoen)
        </small>
      </div>
      <div class="players">
        t i t u l a r i s s e n
      </div>
      {{#each doubles as |double index|}}
        <div class="box d{{@index}} type">
          {{labelDouble @index @root.type}}
        </div>
        <div class="box d{{@index}} p1 name">
          {{double.player1.fullName}}
        </div>
        <div class="box d{{@index}} p1 level">
          {{#if (and (eq @root.type 'MX') (gt @index 1))}}
            {{double.player1.lastRankingPlace.mix}}
          {{else}}
            {{double.player1.lastRankingPlace.double}}
          {{/if}}
        </div>
        <div class="box d{{@index}} p1 number">
          {{double.player1.memberId}}
        </div>
        <div class="box d{{@index}} p1 sum">
          {{double.player1.sum}}
        </div>
        <div class="box d{{@index}} p1 highest">
          {{double.player1.highest}}
        </div>
        <div class="box d{{@index}} p1 team">
          {{#if double.player1.team}}
            x
          {{/if}}
        </div>
        <div class="box d{{@index}} p1 base">
          {{#if double.player1.base}}
            x
          {{/if}}
        </div>
        <div class="box d{{@index}} p2 name">
          {{double.player2.fullName}}
        </div>
        <div class="box d{{@index}} p2 level">
          {{#if (and (eq @root.type 'MX') (gt @index 1))}}
            {{double.player2.lastRankingPlace.mix}}
          {{else}}
            {{double.player2.lastRankingPlace.double}}
          {{/if}}
        </div>
        <div class="box d{{@index}} p2 number">
          {{double.player2.memberId}}
        </div>
        <div class="box d{{@index}} p2 sum">
          {{double.player2.sum}}
        </div>
        <div class="box d{{@index}} p2 highest">
          {{double.player2.highest}}
        </div>
        <div class="box d{{@index}} p2 team">
          {{#if double.player2.team}}
            x
          {{/if}}
        </div>
        <div class="box d{{@index}} p2 base">
          {{#if double.player2.base}}
            x
          {{/if}}
        </div>
      {{/each}}
      {{#each singles as |single|}}
        <div class="box s{{@index}} type">
          {{labelSingle @index @root.type}}
        </div>
        <div class="box s{{@index}} p1 name">
          {{single.fullName}}
        </div>
        <div class="box s{{@index}} p1 level">
          {{single.lastRankingPlace.single}}
        </div>
        <div class="box s{{@index}} p1 number">
          {{single.memberId}}
        </div>
        <div class="box s{{@index}} p1 sum">
          {{single.sum}}
        </div>
        <div class="box s{{@index}} p1 highest">
          {{single.highest}}
        </div>
        <div class="box s{{@index}} p1 team">
          {{#if single.team}}
            x
          {{/if}}
        </div>
        <div class="box s{{@index}} p1 base">
          {{#if single.base}}
            x
          {{/if}}
        </div>
      {{/each}}
    </div>
    <div class="wrapper subtitudes">
      <div class="box pre"></div>
      <div class="box title level">
        <div class="single">
          E
        </div>
        <div class="double">
          D
        </div>
        <div class="mix">
          G
        </div>
      </div>
      <div class="box post"></div>
      {{#each subtitudes as |subtitude|}}
        <div class="box type">
          Invallers
        </div>
        <div class="box p{{@index}} name">
          {{subtitude.fullName}}
        </div>
        <div class="box p{{@index}} level">
          <div>
            {{subtitude.lastRankingPlace.single}}
          </div>
          <div>
            {{subtitude.lastRankingPlace.double}}
          </div>
          <div>
            {{subtitude.lastRankingPlace.mix}}
          </div>
        </div>
        <div class="box p{{@index}} number">
          {{subtitude.memberId}}
        </div>
        <div class="box p{{@index}} sum">
          {{subtitude.sum}}
        </div>
        <div class="box p{{@index}} highest">
          {{subtitude.highest}}
        </div>
        <div class="box p{{@index}} team">
          {{#if subtitude.team}}
            x
          {{/if}}
        </div>
        <div class="box p{{@index}} base">
          {{#if subtitude.base}}
            x
          {{/if}}
        </div>
      {{/each}}
      {{#if subtitudes.[3]}}

      {{else}}
        <div class="box type">
          Invallers
        </div>
        <div class="box p-1 name"></div>
        <div class="box p-1 level"></div>
        <div class="box p-1 number"></div>
        <div class="box p-1 sum"></div>
        <div class="box p-1 highest"></div>
        <div class="box p-1 team"></div>
        <div class="box p-1 base"></div>
      {{/if}}
    </div>
    <div class="bottom">
      <div class="logo">
        <img src="{{logo}}" />
      </div>
      <div class="sign-home">
        Handtekening ploegkapitein,
      </div>
      <div class="sign-away">
        Handtekening ploegkapitein tegenpartij,
      </div>
    </div>
  </body>
</html>