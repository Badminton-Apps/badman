<h2>Teams</h2>
<tr>
  <td style="padding-top:12px" class="mceSpacing-24" valign="top">
    <div class="mceText" style="font-size:16px;width:100%">
      {{#each club.teams as |team|}}
        {{#each team.subEvents as |subEvent|}}
          <p><strong>Team:</strong> {{team.name}} ({{team.abbreviation}})<br/>
          <strong>Reeks:</strong> {{subEvent.event.name}} - {{subEvent.name}} <br/>
          <strong>Captain:</strong> {{team.captain.firstName}} {{team.captain.lastName}} ({{team.captain.email}}, {{team.captain.phone}})
          </p>
          <strong>Basisspelers: </strong>
          {{> players/list players=team.players clientUrl=../../clientUrl}}
        {{/each}}
      {{/each}}
    </div>
  </td>
</tr>

<h2>Comments</h2>
<tr>
  <td style="padding-top:12px" class="mceSpacing-24" valign="top">
    <div class="mceText" style="font-size:16px;width:100%">
      {{#each comments as |comment|}}
         <p><strong>Reeks:</strong> {{comment.competition.name}}<br/>
        <strong>Message:</strong><br/>{{comment.message}}</p>
      {{/each}}
    </div>
  </td>
</tr>
