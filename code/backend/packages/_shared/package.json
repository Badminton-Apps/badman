{
  "name": "@badvlasim/shared",
  "version": "4.35.2",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -b tsconfig.build.json",
    "lint": "eslint -c ../../.eslintrc ./**/*{.ts,.tsx}",
    "format": "eslint --fix -c ../../.eslintrc ./**/*{.ts,.tsx}",
    "gen-erd": "node -r ts-node/register ./utils/generate-erd.ts",
    "test:inspect": "node --inspect ../../node_modules/jest/bin/jest.js --runInBand",
    "test:inspect:name": "node --inspect-brk ../../node_modules/jest/bin/jest.js --runInBand  -t \"PDF service\" ",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@elastic/ecs-winston-format": "^1.3.1",
    "@fast-csv/parse": "^4.3.6",
    "@socket.io/postgres-adapter": "^0.2.0",
    "@socket.io/postgres-emitter": "^0.1.0",
    "compression": "^1.7.4",
    "concat-stream": "^2.0.0",
    "fast-csv": "^4.3.6",
    "handlebars": "^4.7.7",
    "helmet": "^4.6.0",
    "http-proxy-middleware": "^2.0.4",
    "nodemailer": "^6.7.3",
    "nodemailer-express-handlebars": "^4.0.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "promise-callbacks": "^3.8.2",
    "sequelize-slugify": "^1.6.0",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/concat-stream": "^1.6.1",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-direct-transport": "^1.0.32",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "mock-fs": "^5.1.2",
    "sequelize-erd": "^1.3.1"
  },
  "peerDependencies": {
    "dotenv": "^8.2.0",
    "moment": "^2.24.0"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/../../test/env.js"
    ],
    "reporters": [
      "default",
      "jest-github-actions-reporter"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "testLocationInResults": true
  }
}
