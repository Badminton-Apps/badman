{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es2020", "dom"],
    "target": "es6",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules", "dist", ".vscode", "**/*.tsx"]
}
