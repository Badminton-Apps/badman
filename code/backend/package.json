{
  "name": "badman-backend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npx lerna run --parallel start:watch",
    "start:inspect": "npx lerna run start:watch:inspect --stream",
    "lint": "npx lerna run lint --stream",
    "format": "npx lerna run format --stream",
    "test": "npx lerna run test --stream",
    "test:inspect": "npx lerna run test:inspect --stream",
    "build": "npx lerna run build --stream",
    "postbuild": "copyfiles -u 2 -e '**/lcov-report/*.png' packages/_shared/**/*.png packages/_shared/**/*.handlebars  packages/_shared/dist",
    "test:local": "npx lerna run test:local --stream",
    "migrate": "npx lerna run migrate --scope=@badvlasim\\server",
    "release": "npx lerna version",
    "kill-ports": "npx kill-port 5000 5001 5002 5003 5004 6858 6859 6860 6861",
    "kill-node": "taskkill /f /im node.exe"
  },
  "dependencies": {
    "async": "^3.2.2",
    "axios": "^0.24.0",
    "axios-rate-limit": "^1.3.0",
