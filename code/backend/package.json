    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "express-zip": "^3.0.0",
    "fast-safe-stringify": "^2.1.1",
    "fast-xml-parser": "^3.21.1",
    "isemail": "^3.2.0",
    "jwks-rsa": "^2.0.5",
    "lightship": "^6.7.2",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "pretty-ms": "7.0.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.11.0",
    "sequelize-typescript": "^2.1.1",
    "sqlite3": "^5.0.2",
    "tslint": "^6.1.3",
    "zip-stream": "^4.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
