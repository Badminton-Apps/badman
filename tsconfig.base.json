{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@badman/backend-authorization": [
        "libs/backend/authorization/src/index.ts"
      ],
      "@badman/backend-database": ["libs/backend/database/src/index.ts"],
      "@badman/backend-health": ["libs/backend/health/src/index.ts"],
      "@badman/backend-trackers": ["libs/backend/trackers/src/index.ts"],
      "@badman/backend-graphql": ["libs/backend/graphql/src/index.ts"],
      "@badman/backend-sync": ["libs/backend/sync/src/index.ts"],
      "@badman/frontend-components": ["libs/frontend/components/src/index.ts"],
      "@badman/frontend-private": ["libs/frontend/pages/private/src/index.ts"],
      "@badman/frontend-public": ["libs/frontend/pages/public/src/index.ts"],
      "@badman/frontend-welcome": ["libs/frontend/pages/welcome/src/index.ts"],
      "@badman/frontend-modules-auth": ["libs/frontend/modules/auth/src/index.ts"],
      "@badman/frontend-utils": ["libs/frontend/modules/utils/src/index.ts"],
      "@badman/frontend-modules-graphql": ["libs/frontend/modules/graphql/src/index.ts"],
      "@badman/models": ["libs/models/src/index.ts"]
    }
  },
  "include": ["env.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
